{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
  ],
  "parserOptions": {
    // Ensure that we can use async/await
    "ecmaVersion": 2022,
    // Ensure that we can use import/export
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    // Don't give me an error if you see fetch
    "browser": true,
    // Don't give me an error if you see __dirname
    "node": true
  }
}